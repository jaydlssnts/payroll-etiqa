@model payroll.model.Employee

@{
    ViewData["Title"] = "Edit Employee";
}
@{
    Layout="_Layout";
}

<h2>Edit Employee</h2>

<form asp-action="Edit" asp-controller="Employee" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="EmployeeNumber" value="@Model.EmployeeNumber" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input name="EmployeeName" class="form-control" value="@Model.EmployeeName" readonly />
        <span asp-validation-for="EmployeeName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Birth Date</label>
        <input name="BirthDateString" type="date" class="form-control"
               value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Daily Rate</label>
        <input name="DailyRate" type="number" step="0.01" class="form-control" value="@Model.DailyRate" />
        <span asp-validation-for="DailyRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Work Schedule</label>
        <select name="WorkSchedule" class="form-select">
            <option value="MWF" @(Model.WorkSchedule == payroll.model.WorkSchedule.MWF ? "selected" : "")>
                Monday, Wednesday, Friday
            </option>
            <option value="TTHS" @(Model.WorkSchedule == payroll.model.WorkSchedule.TTHS ? "selected" : "")>
                Tuesday, Thursday, Saturday
            </option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a class="btn btn-danger" href="@Url.Action("Index", "Employee")">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
