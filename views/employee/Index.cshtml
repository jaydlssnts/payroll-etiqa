@model List<payroll.model.Employee>
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Employee List";
}

<h1 class="py-5 text-center">Welcome</h1>

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (!Model.Any())
{
    <p>No employees found.</p>
}
else
{   
    <h2>All Employees</h2>
    <span>using /api/employees</span>
    <div><a class="btn btn-success" href="@Url.Action("create", "employee")">Create</a></div>
    <table class="table table-striped table-primary table-bordered">
        <thead class="table-dark">
            <tr class="text-center">
                <th>Name</th>
                <th>ID Number</th>
                <th>Work Schedule</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.EmployeeName</td>
                <td>@emp.EmployeeNumber</td>
                <td>@emp.WorkSchedule</td>
                <td class="text-center"><a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Employee", new { id = emp.EmployeeNumber })">View</td>
            </tr>
        }
        </tbody>
    </table>
    
}
